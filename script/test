#!/bin/bash

set -o errexit
set -o pipefail

# shellcheck disable=SC1091
. venv/bin/activate

export HYPOTHESIS_PROFILE="${HYPOTHESIS_PROFILE:-ci}"

if [ "$CIRCLECI" ]
then
    # Used for CircleCI timings data
    mkdir -p test_results

    # shellcheck disable=SC2046
    coverage run --source bankroll/ -m unittest -v -- $(circleci tests glob "tests/test_*.py" | circleci tests split --split-by=timings)
else
    coverage run --source bankroll/ -m unittest -v -- tests/test_*.py
fi

coveralls
